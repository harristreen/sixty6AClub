      <h1>66A CLUB</h1>
    <% end %>

    <div>
      <ul class="navbar-nav me-auto navbar-right-container">
        <% if !user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Pricing", pricing_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contact", contact_path, class: "nav-link" %>
