<div class="container" style="display: flex; flex-direction: column; align-items: center">
  <div class="form-container form-login">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-8">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { class: 'form-control', autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { class: 'form-control', autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="mt-3" style="display: flex; flex-direction: column; align-items: center">
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn-ghost" %>
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>
