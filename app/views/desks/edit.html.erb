<div class="container" style="display: flex; flex-direction: column; align-items: center">
  <div class="form-container form-login">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-8">
        <%= simple_form_for(@desk) do |f| %>
          <div class="form-inputs">
            <%= f.input :type,
                        required: false,
                        autofocus: true,
                        input_html: { class: 'form-control', autocomplete: "type" } %>
            <%= f.input :price,
                        required: false,
                        autofocus: true,
                        input_html: { class: 'form-control', autocomplete: "location" } %>
            <%= f.input :capacity,
                        required: false,
                        input_html: { class: 'form-control', autocomplete: "capacity" } %>
          </div>
          <div class="mt-3" style="display: flex; flex-direction: column; align-items: center">
            <div class="form-actions">
              <%= f.button :submit, "Update", class: "btn-ghost" %>
            </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
